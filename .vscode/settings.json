{
    "python.pythonPath": "${workspaceRoot}/django/venv/bin/python3.6",
    "python.linting.pep8Enabled": true,
    "python.linting.pep8Args": [
        "--max-line-length=120",
    ],
    "python.linting.pylintPath": "${workspaceRoot}/django/venv/bin/pylint",
    "python.linting.pylintArgs": [
        "--load-plugins",
        "pylint_django",
    ],
    "python.linting.pylintEnabled": true,
    "editor.rulers": [
        120,
    ],
    "editor.tabSize": 4,
}
